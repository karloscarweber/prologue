<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    <script src="https://cdn.logsnag.com/js/0.1.6/ls.js"></script>
    {% render "head", metadata: site.metadata, title: resource.data.title, summary_image: resource.summary_image, twitter_card_type: resource.twitter_card_type %}
  </head>
  <body class="reg-layout  {{ resource.data.layout }} {{ resource.data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource %}

    <main class="item-main">
      {{ content }}
    </main>

    {% render "footer", metadata: site.metadata %}
    {% render "scripts" %}
  </body>
</html>
